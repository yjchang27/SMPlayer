<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yjchang.cs442.smplayer.MusicPlayerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Music Title"
        android:id="@+id/music_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Album"
        android:id="@+id/music_album"
        android:layout_below="@+id/music_title"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Artist"
        android:id="@+id/music_artist"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/music_album"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/music_cover"
        android:background="@drawable/ic_music_note_black_24dp"
        android:layout_below="@+id/music_artist"
        android:layout_centerHorizontal="true"
        android:contentDescription="text" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/music_cover"
        android:layout_centerHorizontal="true"
        android:rowCount="3"
        android:columnCount="5">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/music_seekbar"
            android:layout_row="0"
            android:layout_columnSpan="5"
            android:layout_column="0"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/music_stop"
            android:background="@drawable/ic_stop_black_24dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/music_prev"
            android:background="@drawable/ic_skip_previous_black_24dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/music_play"
            android:background="@drawable/ic_pause_circle_outline_black_24dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/music_next"
            android:background="@drawable/ic_skip_next_black_24dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/music_volume"
            android:background="@drawable/ic_volume_up_black_24dp"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_columnWeight="1" />


    </GridLayout>


</RelativeLayout>
